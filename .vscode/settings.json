{
  "editor.tabSize": 2,
  "files.exclude": {
    "**/.git": true,
    "**/dist": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "__debug_bin": true
  },
  "[go]": {
    "editor.insertSpaces": true,
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    },
    "editor.detectIndentation": false
  },
}